<div class="comment">
	<p><%= comment.content %></p>
	<p class="comment-posted-by">Posted by <%= comment.user.advisor_first_name + ' ' + comment.user.advisor_last_name %> <%= time_ago_in_words(comment.created_at) %> ago</p>

	<div class="links">
		<% if comment.user_id == current_user.id %>
			<%= link_to "Edit", edit_prospect_comment_path(comment.prospect, comment) %>| &nbsp; 
			<%= link_to "Delete", prospect_comment_path(comment.prospect, comment), method: :delete, data: { confirm: "Are you sure?" } %>
		<% end %>
	</div>
</div>