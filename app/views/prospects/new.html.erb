			<%= f.input :phone, label: "Organization Phone" %>
			<%= f.input :website %>
			<hr>
			<%= f.input :contact1_first_name, label: "First Name" %>
			<%= f.input :contact1_last_name, label: "Last Name" %>
			<%= f.input :contact1_title, label: "Title" %>
			<%= f.input :contact1_phone, label: "Direct Phone or Ext" %>
			<%= f.input :contact1_mobile, label: "Mobile" %>
			<%= f.input :contact1_email, label: "Email" %>
			<hr>
			<%= f.input :intro_presentation_date, {:include_blank => true, :default => nil, order: [:day, :month, :year] } %>
			<%= f.input :intro_presenter, label: "Intro Presentation (who presented?)" %>
			<%= f.input :estimated_ap %>
			<%= f.input :prospect_note, label: "Note" %>
			<%= f.input :status, collection: [
																				'Team Presentation Scheduled',
																				'Waiting for NDA',
