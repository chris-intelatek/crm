<div class="col-md-4 col-md-offset-4">
	<div class="prospect-show">
    <h3>Sign up</h3>
    
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
    
      <div class="form-inputs">
        <%= f.input :advisor_first_name, required: true, autofocus: true, label: 'First Name' %>
        <%= f.input :advisor_last_name, required: true, label: 'Last Name'  %>
        <%= f.input :advisor_phone, label: 'Phone'  %>
        <%= f.input :advisor_mobile, label: 'Mobile'  %>
        <%= f.input :email, required: true  %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
        <%= f.input :password_confirmation, required: true %>
        <%= f.input :group, as: :hidden, input_html: {value: @group_id} %>
      </div>
      <p>&nbsp;</p>
      <div class="form-actions">
        <%= f.button :submit, "Sign up", class:"btn btn-kontrol btn-block" %>
      </div>
    <% end %>
      <p>&nbsp;</p>
  </div>
</div>